{% extends "::Backend/base.html.twig" %}


{% block content %}
    {% for message in app.session.flashbag.get("info") %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <section class="content-header">
        <div class="col-xs-6">
            <h1>
                Catalogue
                <small>Liste des partenaires</small>
            </h1>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <a href="{{ path('partner_back_partner_new') }}" class="btn btn-app pull-right"><i class="fa fa-plus-square-o"></i>Cr√©er</a>
            </div>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-body">
                        <table class="table">
                            <thead>
                                <tr class="filters">
                                    <th>Id</th>
                                    <th>Id WP Affiliate</th>
                                    <th>Nom</th>
                                    <th>Domaine</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                {% for partner in partners %}
                                    <tr>
                                        <td><a href="{{ path('partner_back_partner_edit', { 'id': partner.id }) }}">{{ partner.id }}</a></td>
                                        <td>{% if partner.idWordpressAffiliate %}{{ partner.idWordpressAffiliate }}{% else %}-{% endif %}</td>
                                        <td><a href="{{ path('partner_back_partner_edit', { 'id': partner.id }) }}">{{ partner.nom }}</a></td>
                                        <td><a href=https://{{ partner.customDomain }} target="_blank">{{ partner.customDomain }}</a></td>
                                        
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
