{% extends "::Backend/base.html.twig" %}

{% block content %}
    <h1>Page</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ page.name }}</td>
            </tr>
            <tr>
                <th>Step</th>
                <td>{{ page.step }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ page.info|raw }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bp_back_page_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bp_back_page_edit', { 'id': page.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
