{% extends "::Backend/base.html.twig" %}

{% block content %}
    <h1>Labels des charges</h1>

    {% block fil_ariane %}
        <ol class="breadcrumb record_actions">
            <li ><a href="{{ path('back_homepage') }}">Dashboard</a></li>
            <li class="active"><em>Liste des labels</em></li>
        </ol>
    {% endblock fil_ariane %}


    {% for message in app.session.flashbag.get("info") %}

        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}


    <div class="">
        <div class="row">
            <a href="{{ path('back_charge_label_new') }}" class="btn btn-primary pull-right">Create a new chargeLabel</a>
        </div>
        <div class="panel panel-primary filterable">
            <div class="panel-heading">
                <h3 class="panel-title">Liste</h3>
                <div class="pull-right">
                    <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                </div>
            </div>
            <table class="table">
                <thead>
                <tr class="filters">
                    <th></th>
                    <th><input type="text" class="form-control" placeholder="Type" disabled></th>
                    <th><input type="text" class="form-control" placeholder="LibellÃ©" disabled></th>
                    <th><input type="text" class="form-control" placeholder="Immobilisation" disabled></th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for chargeLabel in chargeLabels %}
                    <tr>
                        <td><a href="{{ path('back_charge_label_show', { 'id': chargeLabel.id }) }}">{{ chargeLabel.id }}</a></td>
                        <td>{{ chargeLabel.type }}</td>
                        <td><a href="{{ path('back_charge_label_show', { 'id': chargeLabel.id }) }}">{{ chargeLabel.translate.name }}</a></td>
                        <td>{{ chargeLabel.classement }}</td>
                        <td>
                            <a href="{{ path('back_charge_label_edit', { 'id': chargeLabel.id }) }}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                            <a href="{{ path('back_charge_label_deleted', { 'id': chargeLabel.id }) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="row text-center">
        <div class="navigation">
            {{ knp_pagination_render(chargeLabels) }}
        </div>
    </div>
{% endblock %}
