{% extends "::Backend/base.html.twig" %}


{% block content %}
    <h3>Locales</h3>

    {% block fil_ariane %}
        <ol class="breadcrumb record_actions">
            <li ><a href="{{ path('back_homepage') }}">Dashboard</a></li>
            <li class="active"><em>Liste des locales</em></li>
        </ol>
    {% endblock fil_ariane %}


    {% for message in app.session.flashbag.get("info") %}

        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="">
        <div class="row">
            <a href="{{ path('back_country_new') }}" class="btn btn-primary pull-right">Cr√©er une locale</a>
        </div>
        <div class="panel panel-primary filterable">
            <div class="panel-heading">
                <h3 class="panel-title">List</h3>
                <div class="pull-right">
                    <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr class="filters">
                        <th><input type="text" class="form-control" placeholder="Code" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Name" disabled></th>
                        <th></th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for country in countries %}
                    <tr>
                        <td><a href="{{ path('back_country_edit', { 'id': country.id }) }}">{{ country.code }}</a></td>
                        <td><a href="{{ path('back_country_edit', { 'id': country.id }) }}">{{ country.name }}</a></td>
                        <td>{% if country.flag %}<a href="{{ path('back_country_edit', { 'id': country.id }) }}"><img class="img-responsive thumbnail" src="{{ asset(country.webPath()) }}" alt="{{ country.name }}_flag"/></a>{% endif %}</td>
                        <td>
                            <a href="{{ path('back_country_deleted', { 'id': country.id }) }}" class="btn btn-danger"><i class='fa fa-trash'></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
