{% extends "::Backend/base.html.twig" %}

{% block content %}
    <h1>ChargeType list</h1>

    <div class="">
        <h3></h3>
        <hr>
        <div class="row">
            <div class="panel panel-primary filterable">
                <div class="panel-heading">
                    <h3 class="panel-title">Type de charges</h3>
                    <div class="pull-right">
                        <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                    </div>
                </div>
                <table class="table">
                    <thead>
                    <tr class="filters">
                        <th><input type="text" class="form-control" placeholder="Name" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Type" disabled></th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for chargeType in chargeTypes %}
                            <tr>
                                <td><a href="{{ path('back_chargeType_show', { 'id': chargeType.id }) }}">{{ chargeType.translate.name }}</a></td>
                                <td>{{ chargeType.type }}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('back_chargeType_show', { 'id': chargeType.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('back_chargeType_edit', { 'id': chargeType.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('back_chargeType_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
