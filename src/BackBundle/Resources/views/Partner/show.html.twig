{% extends "::Backend/base.html.twig" %}


{% block content %}
    <h1>Partner</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ partner.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ partner.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ partner.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="img-responsive" src="{{ asset(partner.webPath()) }}" alt="{{ partner.name }}"/></td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('back_partner_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('back_partner_edit', { 'id': partner.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
