{% extends "::Backend/base.html.twig" %}


{% block content %}
<h3>Partenaire</h3>

{% block fil_ariane %}
    <ol class="breadcrumb record_actions">
        <li ><a href="{{ path('back_homepage') }}">Dashboard</a></li>
        <li class="active"><em>Liste</em></li>
    </ol>
{% endblock fil_ariane %}


    {% for message in app.session.flashbag.get("info") %}

        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}


<div class="">
    <div class="row">
        <a href="{{ path('back_partner_new') }}" class="btn btn-primary pull-right">Creer nouveau</a>
    </div>
    <div class="panel panel-primary filterable">
        <div class="panel-heading">
            <h3 class="panel-title">Liste</h3>
            <div class="pull-right">
                <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
            </div>
        </div>
        <table class="table">
            <thead>
            <tr class="filters">
                <th>Image</th>
                <th><input type="text" class="form-control" placeholder="Nom" disabled>Name</th>
                <th><input type="text" class="form-control" placeholder="Nom" disabled>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td><a href="{{ path('back_partner_edit', { 'id': partner.id }) }}"><img class="img-responsive" src="{{ asset(partner.webPath()) }}" alt="{{ partner.name }}"/></a></td>
                <td><a href="{{ path('back_partner_edit', { 'id': partner.id }) }}">{{ partner.name }}</a></td>
                <td><a href="{{ path('back_partner_edit', { 'id': partner.id }) }}">{{ partner.description }}</a></td>
                <td><a href="{{ path('back_partner_deleted', { 'id': partner.id }) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
{% endblock %}
