{% extends "::Backend/base.html.twig" %}


{% block content %}
    <h1>Page</h1>

    <div class="row" style="background: url({{ asset(page.webPath()) }}) no-repeat center; background-size: cover; height: 22em;"></div>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ page.translate.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ page.translate.content }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ page.translate.slug }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if page.createdAt %}{{ page.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if page.updatedAt %}{{ page.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Deletedat</th>
                <td>{% if page.deletedAt %}{{ page.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('back_page_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('back_page_edit', { 'id': page.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
