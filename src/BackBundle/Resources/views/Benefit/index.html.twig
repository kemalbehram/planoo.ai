{% extends "::Backend/base.html.twig" %}


{% block content %}
    <h3>Prestations</h3>

    {% block fil_ariane %}
        <ol class="breadcrumb record_actions">
            <li ><a href="{{ path('back_homepage') }}">Dashboard</a></li>
            <li class="active"><em>Liste</em></li>
        </ol>
    {% endblock fil_ariane %}


    {% for message in app.session.flashbag.get("info") %}

        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}


    <div class="row">
        <a href="{{ path('back_benefit_new') }}" class="btn btn-primary pull-right">Creer nouveau</a>
    </div>
    <div class="panel panel-primary filterable">
        <div class="panel-heading">
            <h3 class="panel-title">Liste</h3>
            <div class="pull-right">
                <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr class="filters">
                    <th><input type="text" class="form-control" placeholder="Nom" disabled></th>
                    <th>Prix</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for benefit in benefits %}
                    <tr>
                        <td><a href="{{ path('back_benefit_show', { 'id': benefit.id }) }}">{{ benefit.translate.name|upper }}</a></td>
                        <td><a href="{{ path('back_benefit_show', { 'id': benefit.id }) }}">{{ benefit.catalog.price }}</a></td>
                        <td>
                            <a href="{{ path('back_benefit_edit', { 'id': benefit.id }) }}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                            <a href="{{ path('back_page_deleted', { 'id': benefit.id }) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
