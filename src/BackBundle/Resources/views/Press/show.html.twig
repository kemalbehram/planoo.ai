{% extends "::Backend/base.html.twig" %}


{% block content %}
    <h1>Press</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ press.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ press.image }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if press.createdAt %}{{ press.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if press.updatedAt %}{{ press.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Deletedat</th>
                <td>{% if press.deletedAt %}{{ press.deletedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('back_press_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('back_press_edit', { 'id': press.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
